[minibuild]
depends=bzip2-1.0 zlib-1.2 openssl-0.9 ncurses-5.6 readline-5.2 expat-2.0 db-4.4 openldap-2.3
# postgresql needs a non threaded python for plpython on freebsd !
if [[ $(uname) == FreeBSD ]];then
        depends=$depends python-2.4_wt
else
        depends=$depends python-2.4
fi
src_uri=https://hg.minitage.org/minitage/buildouts/dependencies/postgresql-8.2.4/
src_type=hg
install_method=buildout
category=dependencies
